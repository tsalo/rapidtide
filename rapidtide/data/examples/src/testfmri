# denoising example
rapidtide \
	sub-TEST.nii.gz \
	../dst/sub-TEST_3passes \
	--spatialfilt 2 \
        --nprocs -1 \
        --passes 3 \
        --noglm

rapidtide \
	sub-TEST.nii.gz \
	../dst/sub-TEST_converge_strict \
	--spatialfilt 2 \
        --nprocs -1 \
        --convergencethresh 0.0005 \
        --noglm

rapidtide \
	sub-TEST.nii.gz \
	../dst/sub-TEST_converge_loose \
	--spatialfilt 2 \
        --nprocs -1 \
        --convergencethresh 0.005 \
        --noglm

